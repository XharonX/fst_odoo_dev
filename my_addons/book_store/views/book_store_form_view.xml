<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
  <data>
    <record id="form_book_store" model="ir.ui.view">
      <field name="name">form.bookstore.book</field>
      <field name="model">bookstore.book</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <field name="image" widget="image" class="oe_avatar" />
            <div class="oe_title">
            <label for="name" class="oe_edit_only" />
            <h1>
              <field name='name' placeholder="Enter your name" required="True" />
            </h1>
          </div>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>